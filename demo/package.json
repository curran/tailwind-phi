{
  "name": "tailwind-phi-demo",
  "private": true,
  "scripts": {
    "watch": "npx tailwindcss -i input.css -o output.css --watch",
    "serve": "python3 -m http.server 8080 || python -m SimpleHTTPServer 8080",
    "dev": "concurrently \"yarn watch\" \"yarn serve\"",
    "build": "tailwindcss -i input.css -o output.css"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "tailwindcss": "^3.4.14"
  }
}
